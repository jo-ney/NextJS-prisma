datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FoodEntry {
  id          Int      @id @default(autoincrement())
  session     String?
  foodName        String
  weight      Int
  description String?
  createdAt   DateTime @default(now())
}

model Expense {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())    // when record is inserted
  dateTime        DateTime                     // expense date & time
  itemName        String
  capacity        Float                        // g or ml
  itemPrice       Float                        // actual item price
  actualPrice     Float                        // given price per Kg/L
  calculatedPrice Float                        // auto-calculated (optional, you can compute in app too)
  description     String?                      // optional field
}

model Update {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())   // when the update was created
  updatedAt   DateTime @updatedAt        // auto update timestamp
  title       String
  description String
  note        String?
}